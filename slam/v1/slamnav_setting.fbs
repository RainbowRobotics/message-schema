//--------------------------------------------

table SensorInfo {
    index: int;
    serial: string;
}

// get sensor info
table Request_Get_Sensor_Info {
    id: string;
    target: string;
}
table Response_Get_Sensor_Info {
    id: string;
    target: string;
    index: [SensorInfo];
    result: string;
    message: string;
}

// set sensor info
table Request_Set_Sensor_Index {
    id: string;
    target: string;
    index: [SensorInfo];
}
table Response_Set_Sensor_Index {
    id: string;
    target: string;
    index: [SensorInfo];
    result: string;
    message: string;
}

// get sensor control
table Request_Get_Sensor_Control {
    id: string;
    target: string;
    control: bool;  // on / off
}
table Response_Get_Sensor_Control {
    id: string;
    target: string;
    control: bool;
    result: string;
    message: string;
}

// set sensor control
table Request_Set_Sensor_Control {
    id: string;
    target: string;
    control: bool;
}
table Response_Set_Sensor_Control {
    id: string;
    target: string;
    control: bool;
    result: string;
    message: string;
}

