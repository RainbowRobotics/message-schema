//--------------------------------------------
table Result_Setting_Param {
    id: string;
    params: [SettingParam];
    result: string;
    message: string;
}

table Result_Setting_Sensor {
    id: string;
    target: string;
    control: bool;
    index: [SensorInfo];
    result: string;
    message: string;
}