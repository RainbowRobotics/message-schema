namespace SLAMNAV;

// get robot_type
table Request_Get_Robot_Type {
    id: string;
}
table Response_Get_Robot_Type {
    id: string;
    robot_type: string;
    result: string;
    message: string;
}

// set robot_type
table Request_Set_Robot_Type {
    id: string;
    robot_type: string;
}
table Response_Set_Robot_Type {
    id: string;
    robot_type: string;
    result: string;
    message: string;
}

table SettingParam {
    key: string;
    type: string;
    value: string;
}
