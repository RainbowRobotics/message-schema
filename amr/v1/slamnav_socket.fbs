namespace SLAMNAV;


// -------------------------------------------------
// -----------                              --------
// -----------       Data Structure         --------
// -----------                              --------
// -------------------------------------------------


/*
    category    :       Data Structure
    usage       :       robot pose
    field
        - x, y, z       :       3D 좌표 (m)
        - rz            :       회전각 (rad)
*/
struct PointPose {
    x: float;
    y: float;
    z: float;
    rz: float;
}


/*
    category    :       Data Structure
    usage       :       경로 Structure
    field
        - x, y          :       2D 좌표 (m)
        - rz            :       회전각 (rad)
*/
struct PathPose {
    x: float;
    y: float;
    rz: float;
}


// -------------------------------------------------
// -----------                              --------
// -----------          Pub / Sub           --------
// -----------                              --------
// -------------------------------------------------

/*
    category    :       Pub / Sub
    topic       :       {robotType}/socket/lidar2d
    usage       :       2D / 3D 라이다 포인트 클라우드 데이터
    field
        - data          :       클라우드 벡터 데이터
        - column_count  :       data column ( "4" )
        - row_count     :       data row ( cloud size )
        - pose          :       Lidar 스캔 위치
*/
table LidarData {
    data: [float];
    column_count: uint32;
    row_count: uint32;
    pose: PointPose;
}


