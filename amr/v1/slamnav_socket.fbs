/*
    category    :       Pub / Sub
    topic       :       {robotType}/socket/globalPath
    usage       :       전역 경로 데이터
    field
        - path          :       경로 포즈 배열 (x, y, rz)
*/
table GlobalPath {
    path: [PathPose];
}

/*
    category    :       Pub / Sub
    topic       :       {robotType}/socket/localPath
    usage       :       지역 경로 데이터
    field
        - path          :       경로 포즈 배열 (x, y, rz)
*/
table LocalPath {
    path: [PathPose];
}
