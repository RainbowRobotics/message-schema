/*
    category    :       Pub / Sub (Result)
    topic       :       {robotType}/control/result
    usage       :       도킹 제어 결과 응답
    field
        - command       :       control Callback 명령 (string)
            - "dock"  "undock"  "dockStop"
        - result        :       이동 결과
            - success       :       동작 성공.
            - fail          :       동작 실패.
            - start         :       동작 시작.
            - cancel        :       동작 중, 새로운 명령에 의해 기존 동작 취소.
*/
table ResultControlDock {
    id: string;
    command: string;
    result: string;
    message: string;
}