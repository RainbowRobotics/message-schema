/*
    category    :       Data Structure
    usage       :       safety Flag Structure
    field
        - name          :       obstacle, bumper, interlock, operationStop
        - value         :       true / false
*/
table SafetyFlag {
    name: string;   
    value: bool;
}
/*
    category    :       Data Structure
    usage       :       Obstacle Range Structure
*/
struct ObsBox {
    x: float;
    y: float;
    z: float;
}

